{
  "name": "pixi-game-template",
  "version": "0.1.0",
  "repository": "https://github.com/sharbelfs/pixi-game-template",
  "description": "Game template using PIXI, webpack and ES6",
  "developer": "Sharbel - http://sharbel.info",
  "config": {
    "buildDir": "./build",
    "stageWidth": 1280,
    "stageHeight": 960,
    "viewport": {
      "width": 960,
      "height": 960
    }
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --content-base app/ --hot --inline --host 0.0.0.0",
    "webpack": "webpack -p --config ./webpack.config.js",
    "build": "cross-env NODE_ENV=production npm run webpack",
    "prewebpack": "npm run clean",
    "clean": "rimraf $npm_package_config_buildDir && mkdir $npm_package_config_buildDir",
    "lint": "eslint ./app/**/*.js",
    "reactman": "reactman --config ./templates/reactman.config.js"
  },
  "dependencies": {
    "howler": "^2.0.0",
    "p2": "^0.7.1",
    "pixi-particles": "^1.6.6",
    "pixi-spine": "^1.1.3",
    "pixi.js": "^3.0.7",
    "platform": "^1.3.1"
  },
  "devDependencies": {
    "crypto-js": "^3.1.6",
    "babel-core": "^6.7.2",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-runtime": "^6.6.1",
    "brfs": "^1.4.3",
    "browserify-versionify": "^1.0.6",
    "copy-webpack-plugin": "^3.0.1",
    "eslint": "^2.4.0",
    "file-loader": "^0.8.4",
    "glslify": "^5.1.0",
    "html-loader": "^0.4.3",
    "ify-loader": "^1.0.3",
    "json-loader": "^0.5.3",
    "reactman": "^3.2.0",
    "rimraf": "^2.4.3",
    "transform-loader": "^0.2.3",
    "cross-env" : "^3.1.3",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.11.0",
    "webpack-obfuscator": "^0.7.2",
    "webpack-strip": "^0.1.0",
    "webpack-sources": "^0.1.2"
  },
  "engines": {
    "node": ">=5.0.0"
  }
}
